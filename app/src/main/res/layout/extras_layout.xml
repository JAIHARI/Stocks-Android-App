<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stock_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sam_chordas.android.stockhawk.ui.StockDetailFragment">

    <LinearLayout
        android:id="@+id/info_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/symbol"
                android:text="GOOG"
                android:textSize="24sp"
                android:textColor="@color/darker_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/company_name"
                android:text="(Alphabet Inc.)"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:textSize="24sp"
                android:textColor="@color/green_text_50"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bid_price"
                android:text="788.75"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currency_text_view"
                android:text="USD"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change"
                android:text="-1.69"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:textColor="@color/dark_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_percentage"
                android:text="(-0.39%)"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/change_arrow"
                android:layout_weight="1"
                android:src="@drawable/down_color_100"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        grid:columnCount="2"
        android:background="@color/grey"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/open_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_price"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/market_cap_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mkt cap: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/market_cap"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/high_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/high_price"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/pe_ratio_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P/E Ratio: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pe_ratio"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/low_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/low_price"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">
            <TextView
                android:id="@+id/div_yield_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Div yield: "
                android:textColor="@color/green_text_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/div_yield"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>